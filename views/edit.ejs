<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog: <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        
         <div class="field">
                <label>Blog Content</label>
                <textarea name="blog[body]"><%= blog.body %></textarea>
         </div>
         <button type="submit" class="positive ui button big">Update Blog</button>
    </form>
</div>

<% include ./partials/footer %>